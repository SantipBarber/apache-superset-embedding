<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    
    <!-- Template principal del componente SupersetDashboard -->
    <t t-name="eticco_superset_integration.SupersetDashboardTemplate">
        <div class="superset_dashboard_component" t-attf-class="{{ props.className }}">
            
            <!-- Loading State -->
            <div t-if="state.loading" class="superset_dashboard_loading">
                <div class="d-flex justify-content-center align-items-center" t-attf-style="height: {{ props.height }};">
                    <div class="text-center">
                        <i class="fa fa-circle-o-notch fa-spin fa-3x text-muted mb-3"></i>
                        <div class="text-muted">
                            <strong>Cargando dashboard...</strong>
                        </div>
                        <div class="small text-muted mt-1">
                            Conectando con Superset
                        </div>
                    </div>
                </div>
            </div>

            <!-- Error State -->
            <div t-elif="state.error" class="superset_dashboard_error">
                <div class="alert alert-danger d-flex align-items-center" role="alert">
                    <i class="fa fa-exclamation-triangle fa-2x me-3"></i>
                    <div class="flex-grow-1">
                        <h6 class="alert-heading mb-1">Error cargando dashboard</h6>
                        <p class="mb-2" t-esc="state.error"></p>
                        <hr class="my-2"/>
                        <div class="d-flex">
                            <button class="btn btn-outline-danger btn-sm me-2" t-on-click="reloadDashboard">
                                <i class="fa fa-refresh"></i> Reintentar
                            </button>
                            <small class="text-muted align-self-center">
                                Verifica la configuración de Superset
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Dashboard Container -->
            <div t-else="" class="superset_dashboard_container">
                
                <!-- Dashboard Info (solo si hay datos) -->
                <div t-if="state.dashboardData and !state.loading" class="superset_dashboard_info mb-2">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <i class="fa fa-bar-chart text-primary me-2"></i>
                            <span class="fw-bold text-primary" t-esc="state.dashboardData.dashboard_title"></span>
                        </div>
                        <div class="d-flex align-items-center">
                            <span t-if="state.isEmbedded" class="badge bg-success me-2">
                                <i class="fa fa-check-circle"></i> Activo
                            </span>
                            <button class="btn btn-outline-secondary btn-sm" 
                                    t-on-click="reloadDashboard" 
                                    title="Recargar dashboard">
                                <i class="fa fa-refresh"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Contenedor donde se embebe el dashboard -->
                <div class="superset_dashboard_embed" 
                     t-ref="dashboardContainer"
                     t-attf-style="height: {{ props.height }}; min-height: 400px; border: 1px solid #dee2e6; border-radius: 0.375rem; background-color: #f8f9fa;">
                     
                    <!-- Placeholder cuando no hay dashboard -->
                    <div t-if="!state.dashboardData and !state.loading" class="d-flex justify-content-center align-items-center h-100">
                        <div class="text-center text-muted">
                            <i class="fa fa-bar-chart fa-3x mb-3"></i>
                            <div class="h5">Selecciona un dashboard</div>
                            <div class="small">
                                Elige un dashboard del selector para visualizarlo
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Dashboard Stats (solo en modo debug) -->
                <div t-if="state.dashboardData and state.dashboardData.debug_mode" class="superset_dashboard_debug mt-2">
                    <details class="small">
                        <summary class="text-muted">
                            <i class="fa fa-bug"></i> Información de debug
                        </summary>
                        <div class="mt-2 p-2 bg-light rounded">
                            <div><strong>Dashboard ID:</strong> <t t-esc="state.dashboardData.dashboard_id"/></div>
                            <div><strong>Embedding UUID:</strong> <code t-esc="state.dashboardData.embedding_uuid"/></div>
                            <div><strong>Superset Domain:</strong> <t t-esc="state.dashboardData.superset_domain"/></div>
                            <div><strong>Estado embedding:</strong> 
                                <span t-if="state.isEmbedded" class="text-success">✓ Embebido</span>
                                <span t-else="" class="text-warning">⚠ No embebido</span>
                            </div>
                        </div>
                    </details>
                </div>
            </div>
        </div>
    </t>

</templates>